<div>
    Name: {{input name=name}}
    &nbsp;&nbsp;&nbsp;
    Description: {{input name=description}}
    <br/>
    <button {{action 'createCampaign'}}>Create</button>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {{#each model as |campaign|}}
        <tr class="campaign">
            <td>{{campaign.name}}</td>
            <td>{{campaign.status}}</td>
            <td>{{campaign.description}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
